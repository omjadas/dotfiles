[pull]
    rebase = false

[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true

[core]
    pager = delta

[delta]
    line-numbers = true
    plus-color = "#012800"
    minus-color = "#340001"
    syntax-theme = Solarized (dark)

[interactive]
    diffFilter = delta --color-only

[init]
	defaultBranch = main
