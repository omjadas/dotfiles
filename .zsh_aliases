system_type=$(uname -s)

update () {
    if [ "$system_type" = "Linux" ]; then
        distro=$(lsb_release -si)
        if [ "$distro" = "Arch" ]; then
            yay -Syu
        elif [ "$distro" = "Ubuntu" ]; then
            sudo apt update && sudo apt dist-upgrade
        elif [ "$distro" = "Fedora" ]; then
            sudo dnf upgrade
        fi
    else
        brew update && brew upgrade
    fi
    antigen update
    git-ignore -u
    vim -c "PlugUpdate | q | q"
}

if [ "$system_type" = "Darwin" ]; then
    alias ls='gls --color'
fi

alias gi='git-ignore'

alias la='ls -a'
alias ll='ls -lh'
alias lla='ls -alh'

alias less='cless'
alias cat='ccat'

alias vi='vim'

alias sudo='sudo '

