update () {
    system_type=$(uname -s)
    if [ "$system_type" = "Linux" ]; then
        yay -Syu
    else
        brew update && brew upgrade
    fi
    gi -u
    vim -c "PlugUpdate | q | q"
}

alias gi='git-ignore'

alias la='ls -a'
alias ll='ls -lh'
alias lla='ls -alh'

alias less='cless'
alias cat='ccat'

alias vi='vim'

alias sudo='sudo '
